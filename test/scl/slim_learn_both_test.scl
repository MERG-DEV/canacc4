      else
        report("slim_learn_both_test: Wrong output");
        test_state := fail;
      end if;
      --
      wait on PORTC;
      if PORTC != 0 then
        report("slim_learn_both_test: Output not turned off");
        test_state := fail;
      end if;
      --
      wait on PORTC for 5 ms;
      if PORTC != 0 then
        report("slim_learn_both_test: Unexpected trigger");
        test_state := fail;
      end if;
      --
      RXB0D0 <= 16#90#;    -- ACON, CBUS accessory on
      RXB0D1 <= 2;         -- NN high
      RXB0D2 <= 1;         -- NN low
      RXB0D3 <= 2;
      RXB0D4 <= 4;
      RXB0CON.RXFUL <= '1';
      RXB0DLC.DLC3 <= '1';
      CANSTAT <= 16#0C#;
      PIR3.RXB0IF <= '1';
      report("slim_learn_both_test: On event 0x0204 trigger 3B");
      --
      wait on PORTC;
      if PORTC == 16#04# then -- Output 3B on
        report("slim_learn_both_test: 3B triggered");
      else
        report("slim_learn_both_test: Wrong output");
        test_state := fail;
      end if;
      --
      wait on PORTC;
      if PORTC != 0 then
        report("slim_learn_both_test: Output not turned off");
        test_state := fail;
      end if;
      --
      wait on PORTC for 5 ms;
      if PORTC != 0 then
        report("slim_learn_both_test: Unexpected trigger");
        test_state := fail;
      end if;
      --
      RXB0D0 <= 16#91#;    -- ACON, CBUS accessory off
      RXB0D1 <= 1;         -- NN high
      RXB0D2 <= 2;         -- NN low
      RXB0D3 <= 4;
      RXB0D4 <= 6;
      RXB0CON.RXFUL <= '1';
      RXB0DLC.DLC3 <= '1';
      CANSTAT <= 16#0C#;
      PIR3.RXB0IF <= '1';
      report("slim_learn_both_test: Off event 0x0406 trigger 2A");
      --
      wait on PORTC;
      if PORTC == 16#02# then -- Output 2A on
        report("slim_learn_both_test: 2A triggered");
      else
        report("slim_learn_both_test: Wrong output");
        test_state := fail;
      end if;
      --
      wait on PORTC;
      if PORTC != 0 then
        report("slim_learn_both_test: Output not turned off");
        test_state := fail;
      end if;
      --
      wait on PORTC for 5 ms;
      if PORTC != 0 then
        report("slim_learn_both_test: Unexpected trigger");
        test_state := fail;
      end if;
      --
      RXB0D0 <= 16#91#;    -- ACON, CBUS accessory off
      RXB0D1 <= 2;         -- NN high
      RXB0D2 <= 1;         -- NN low
      RXB0D3 <= 6;
      RXB0D4 <= 4;
      RXB0CON.RXFUL <= '1';
      RXB0DLC.DLC3 <= '1';
      CANSTAT <= 16#0C#;
      PIR3.RXB0IF <= '1';
      report("slim_learn_both_test: Off event 0x0604 trigger 2B");
      --
      wait on PORTC;
      if PORTC == 16#40# then -- Output 2B on
        report("slim_learn_both_test: 2B triggered");
      else
        report("slim_learn_both_test: Wrong output");
        test_state := fail;
      end if;
      --
      wait on PORTC;
      if PORTC != 0 then
        report("slim_learn_both_test: Output not turned off");
        test_state := fail;
      end if;
      --
      wait on PORTC for 5 ms;
      if PORTC != 0 then
        report("slim_learn_both_test: Unexpected trigger");
        test_state := fail;
      end if;
      --
      if test_state == pass then
        report("slim_learn_both_test: PASS");
      else
        report("slim_learn_both_test: FAIL");
      end if;          
      PC <= 0;
      wait;
    end process slim_learn_both_test;
end testbench;
