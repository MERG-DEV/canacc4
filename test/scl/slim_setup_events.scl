configuration for "PIC18F2480" is
  shared label _CANInit;
  shared label noFreeCh;
  shared label slimset;
  shared label main0;
end configuration;
--
testbench for "PIC18F2480" is
begin
  test_timeout: process is
    begin
      wait for 2000 ms;
      report("slim_setup_events_test: TIMEOUT");
      report(PC); -- Crashes simulator, MDB will report current source line
      PC <= 0;
      wait;
    end process test_timeout;
    --
  slim_setup_events_test: process is
    type test_result is (pass, fail);
    variable test_state : test_result;
    begin
      report("slim_setup_events_test: START");
      test_state := pass;
      --
      RB4 <= '1'; -- DOLEARN off
      RA5 <= '1'; -- UNLEARN off
      --
      wait until PC == _CANInit;
      report("slim_setup_events_test: Reached _CANInit");
      --
      loop
        wait for 1 ic;
        if PC == noFreeCh then
          report("slim_setup_events_test: Unexpectedly reached noFreeCh");
          test_state := fail;
          wait for 1 ic;
        end if;
        exit when PC == slimset;
      end loop;
      report("slim_setup_events_test: Reached slimset");
      --
      wait until PC == main0;
      report("slim_setup_events_test: Reached main0");
      --
      if test_state == pass then
        report("slim_setup_events_test: PASS");
      else
        report("slim_setup_events_test: FAIL");
        report(PC); -- Crashes simulator, MDB will report current source line
      end if;          
      PC <= 0;
      wait;
    end process slim_setup_events_test;
end testbench;
